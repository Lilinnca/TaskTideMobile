<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/imgBannerEvento"
        android:layout_width="220dp"
        android:layout_height="123dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bannerpadrao" />

    <Button
        android:id="@+id/btnInformacoesTelaInicial"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#338B85"
        android:text="Informações"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/imgBannerEvento"
        app:layout_constraintEnd_toEndOf="@id/imgBannerEvento"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="@id/imgBannerEvento"
        app:layout_constraintTop_toBottomOf="@+id/nomeEvento"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nomeEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Evento"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgBannerEvento"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/imgBannerEvento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />


</androidx.constraintlayout.widget.ConstraintLayout>