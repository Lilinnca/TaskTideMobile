<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SobreNos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar17"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="40dp"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSobreNos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="307dp"
        android:layout_marginBottom="29dp"
        android:text="Sobre Nós"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar17"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="371dp"
        android:layout_height="700dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar17">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginEnd="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOlaSobreNos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olá!"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtParagrafoUmSobreNos"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:text="O TaskTide é um aplicativo projetado para simplificar a gestão de eventos e a contabilização de horas complementares para estudantes do nosso campus."
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtParagrafoDoisSobreNos"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:text="Nosso objetivo é facilitar a organização de eventos acadêmicos e extracurriculares, proporcionando uma maneira mais simples de acompanhar suas atividades e horas complementares ao longo da jornada acadêmica."
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtParagrafoTresSobreNos"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:text="Explore todas as funcionalidades que oferecemos e participe conosco na melhoria contínua do aplicativo! Estamos comprometidos em tornar a gestão de eventos mais eficiente e satisfatória para todos os envolvidos."
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtParagrafoQuatroSobreNos"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:text="Caso tenha alguma dúvida, feedback ou sugestão, não hesite em nos contatar. Estamos ansiosos para ouvir suas opiniões e trabalhar juntos para aprimorar ainda mais nossa ferramenta, tornando-a indispensável para a comunidade acadêmica do IFAM Campus Manaus Centro."
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtParagrafoCincoSobreNos"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:text="Agradecemos sua participação nesta jornada!"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtEquipeSobreNos"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="Equipe TaskTide"
                android:textSize="19dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVoltarSobreNos"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/green"
        android:contentDescription='botao voltar minha conta'
        android:onClick="voltarSobreNos"
        app:icon="@drawable/voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>