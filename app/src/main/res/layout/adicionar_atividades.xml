<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cronograma"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center" />


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />


    <EditText
        android:id="@+id/edtNomeAtividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Atividade"
        android:inputType="text" />


    <Button
        android:id="@+id/btnEscolherDataHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#338B85"
        android:text="Escolher Data e Horário"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/edtLocalAtividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local da Atividade"
        android:inputType="text" />


    <EditText
        android:id="@+id/edtResponsavelAtividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Responsável pela Atividade"
        android:inputType="text" />


    <EditText
        android:id="@+id/edtDescricaoAtividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição (opcional)"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:maxLines="4"
        android:visibility="gone" />
    <Button
        android:id="@+id/btnAdicionarAtividade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#338B85"
        android:text="Adicionar Atividade"
        android:textSize="16dp" />


    <Button
        android:id="@+id/btnFinalizarCronograma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Cronograma"
        android:visibility="gone" /> <!-- Inicialmente invisível -->
</LinearLayout>
